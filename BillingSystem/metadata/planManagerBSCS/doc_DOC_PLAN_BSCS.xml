    <methodList>
      <method name="btn_guardar" type="usrActionMethod">
        <script><![CDATA[
          externalSystemBSCS.quiebra_ejecucion();

          if ( this.model.ID_PLAN_C != null && this.model.ID_PLAN_C != "" )
          {
              if ( this.model.ID_PLAN_N == null )
              {
                  //-----OBTIENE NUEVA SECUENCIA PARA EL NUEVO PLAN
                  var doc_secuencia = new Finder("planManagerBSCS.SEQ_ID_PLAN_BSCS");
                  var nueva_secuencia = doc_secuencia.search();
                  var var_id_plan=nueva_secuencia[0].type;
                  this.model.ID_PLAN_N=var_id_plan;
              }

              this.save();
              Global.showUserMessage("Plan Almacenado");

              var finderUI = new planManagerBSCS.FIND_BSCS_PLAN.UserInterface(null, this);
              return finderUI;

          }
          else
              Global.showUserMessage("Debe ingresar un ID");
        ]]></script>
