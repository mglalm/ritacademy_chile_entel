    <methodList>
      <method name="btn_grabar" type="usrActionMethod">
        <script><![CDATA[
          externalSystemEMA.quiebra_ejecucion();

          if ( this.model.ID_NODO_C != null && this.model.ID_NODO_C != "" )
          {
              if ( this.model.ID_NODO_N == null )
              {
                  //-----OBTIENE NUEVA SECUENCIA PARA EL NUEVO PLAN
                  var doc_secuencia = new Finder("profileManagerEMA.SEQ_ID_NODO_EMA");
                  var nueva_secuencia = doc_secuencia.search();
                  var var_campo_id=nueva_secuencia[0].type;  //Obtiene el valor desde el finder
                  this.model.ID_NODO_N=var_campo_id;
              }

              this.save();
              Global.showUserMessage("Nodo Almacenado");

              var finderUI = new profileManagerEMA.FIND_EMA_NODO.UserInterface(null, this);
              return finderUI;

          }
          else
          {
              Global.showUserMessage("Debe ingresar un ID");
              return false;
          }
        ]]></script>
