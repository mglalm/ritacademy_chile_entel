<?xml version="1.0" encoding="UTF-8" ?>
<findDoc name="despliegaPO.poFinder">
  <extends>find_com.conceptwave.system.Finder</extends>
  <input>doc_despliegaPO.poResult</input>
  <label>Buscador PO</label>
  <metaVersion>25</metaVersion>
  <output>doc_despliegaPO.poSearch</output>
  <type>document</type>
  <vDetailForm>doc_despliegaPO.poSearch/ui_UserInterface/frmui_Forms/exov_Default</vDetailForm>
  <searchList>
    <search type="sitem">
      <document>doc_despliegaPO.poResult</document>
      <mappedDocument>doc_despliegaPO.poSearch</mappedDocument>
      <mappedPath>doc_despliegaPO.poSearch/leaf_poCode</mappedPath>
      <operation>equal</operation>
      <path>doc_despliegaPO.poResult/leaf_poCode</path>
    </search>
    <search type="sitem">
      <document>doc_despliegaPO.poResult</document>
      <mappedDocument>doc_despliegaPO.poSearch</mappedDocument>
      <mappedPath>doc_despliegaPO.poSearch/leaf_poDescr</mappedPath>
      <operation>equal</operation>
      <path>doc_despliegaPO.poResult/leaf_poDescr</path>
    </search>
    <search type="sitem">
      <document>doc_despliegaPO.poResult</document>
      <mappedDocument>doc_despliegaPO.poSearch</mappedDocument>
      <mappedPath>doc_despliegaPO.poSearch/leaf_poName</mappedPath>
      <operation>equal</operation>
      <path>doc_despliegaPO.poResult/leaf_poName</path>
    </search>
    <search type="sitem">
      <document>doc_despliegaPO.poResult</document>
      <mappedDocument>doc_despliegaPO.poSearch</mappedDocument>
      <mappedPath>doc_despliegaPO.poSearch/leaf_poStatus</mappedPath>
      <operation>equal</operation>
      <path>doc_despliegaPO.poResult/leaf_poStatus</path>
    </search>
    <search type="sitem">
      <document>doc_despliegaPO.poResult</document>
      <mappedDocument>doc_despliegaPO.poSearch</mappedDocument>
      <mappedPath>doc_despliegaPO.poSearch/leaf_poType</mappedPath>
      <operation>equal</operation>
      <path>doc_despliegaPO.poResult/leaf_poType</path>
    </search>
    <search type="sitem">
      <mappedDocument>doc_despliegaPO.poSearch</mappedDocument>
      <mappedPath>doc_despliegaPO.poSearch/leaf_poType</mappedPath>
      <operation>==</operation>
      <staticValue>ProductOffering</staticValue>
    </search>
  </searchList>
  <UserInterface name="UserInterface" type="ui">
    <extends>ui_com.conceptwave.system.FinderUserInterface</extends>
    <variableList>
      <variable name="finder" type="uivar">
        <valueType>ui_com.conceptwave.system.FinderUserInterface</valueType>
      </variable>
      <variable name="search" type="uivar">
        <valueType>doc_despliegaPO.poResult/ui_UserInterface</valueType>
      </variable>
      <variable name="detail" type="uivar">
        <flags enum-type="metadataFlag">VALIDATE</flags>
        <valueType>doc_despliegaPO.poSearch/ui_UserInterface</valueType>
      </variable>
      <variable name="result" type="uivar">
        <flags enum-type="metadataFlag">ARRAY</flags>
        <valueType>doc_despliegaPO.poSearch</valueType>
      </variable>
    </variableList>
    <vformList>
      <vform name="Forms" type="frmui">
        <extends>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms</extends>
        <overlayList>
          <overlay name="Default" type="exov">
            <base>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/exov_Default</base>
            <extends>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/exov_Default</extends>
            <label>Default</label>
            <overrideList>
              <override name="detailSection" type="elsect">
                <formReference type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/uivar_detailForm</variablePath>
                  </variablePathList>
                </formReference>
                <variable type="varPath">
                  <variablePathList>
                    <variablePath>findDoc_despliegaPO.poFinder/ui_UserInterface/uivar_detail</variablePath>
                  </variablePathList>
                </variable>
                <visible type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/permMethod_detailVisible</variablePath>
                  </variablePathList>
                </visible>
              </override>
              <override name="searchFormSection" type="elsect">
                <formReference type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.BaseFinderUserInterface/uivar_searchForm</variablePath>
                  </variablePathList>
                </formReference>
                <variable type="varPath">
                  <variablePathList>
                    <variablePath>findDoc_despliegaPO.poFinder/ui_UserInterface/uivar_search</variablePath>
                  </variablePathList>
                </variable>
                <visible type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.FinderUserInterface/permMethod_showSearchForm</variablePath>
                  </variablePathList>
                </visible>
              </override>
            </overrideList>
          </overlay>
          <overlay name="Result" type="exov">
            <base>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/vform_Result</base>
            <extends>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/vform_Result</extends>
            <label>Result</label>
            <overrideList>
              <override name="table" type="elvlt">
                <height>100%</height>
                <width>100%</width>
                <elementList>
                  <element name="poFinderResultTable" type="eltabl">
                    <doubleClickMethod type="varPath">
                      <variablePathList>
                        <variablePath>findDoc_despliegaPO.poFinder/ui_UserInterface/usrActionMethod_activaProvision</variablePath>
                      </variablePathList>
                    </doubleClickMethod>
                    <onSelectChange type="varPath">
                      <variablePathList>
                        <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/action_OnSelChanged</variablePath>
                      </variablePathList>
                    </onSelectChange>
                    <variable type="varPath">
                      <variablePathList>
                        <variablePath>findDoc_despliegaPO.poFinder/ui_UserInterface/uivar_result</variablePath>
                      </variablePathList>
                    </variable>
                    <elementList>
                      <element name="poCode" type="elfld">
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findDoc_despliegaPO.poFinder/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_despliegaPO.poSearch/leaf_poCode</variablePath>
                          </variablePathList>
                        </variable>
                      </element>
                      <element name="poName" type="elfld">
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findDoc_despliegaPO.poFinder/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_despliegaPO.poSearch/leaf_poName</variablePath>
                          </variablePathList>
                        </variable>
                      </element>
                      <element name="poDescr" type="elfld">
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findDoc_despliegaPO.poFinder/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_despliegaPO.poSearch/leaf_poDescr</variablePath>
                          </variablePathList>
                        </variable>
                      </element>
                      <element name="poStatus" type="elslct">
                        <emptyValueText>Todos</emptyValueText>
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findDoc_despliegaPO.poFinder/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_despliegaPO.poSearch/leaf_poStatus</variablePath>
                          </variablePathList>
                        </variable>
                      </element>
                    </elementList>
                  </element>
                </elementList>
              </override>
            </overrideList>
          </overlay>
        </overlayList>
      </vform>
    </vformList>
    <methodList>
      <method name="activaProvision" type="usrActionMethod">
        <script><![CDATA[
          var doc = new Document('despliegaPO.agregaPO');
          doc.poCode = this.result.selected[0].poCode;
          doc.provStatus = 0;
          doc.fechaProv = new Date();
          doc.save();

          var dt = new DataStructure('OM_CONSUMER.request');
          dt.productOfferId = doc.poCode;
          dt.orderId = doc.cwDocId;

          var arr = new Array();
          arr[0] = dt;
          arr[1] = null;

          Global.showUserMessage("PO enviada a proceso de provision.\n Numero de Orden:" +doc.cwDocId);

          var respuesta = Global.invokeInterface('OM_CONSUMER.OMInterfaz','provisioning',arr);
        ]]></script>
      </method>
    </methodList>
  </UserInterface>
  <viewList>
    <view name="vista" type="findVView">
      <inputOverlay>doc_despliegaPO.poResult/ui_UserInterface/frmui_Forms/vform_generatedForm</inputOverlay>
      <outputOverlay>findDoc_despliegaPO.poFinder/ui_UserInterface/frmui_Forms/exov_Result</outputOverlay>
      <searchImmediately>true</searchImmediately>
      <showSearchForm>true</showSearchForm>
    </view>
  </viewList>
</findDoc>